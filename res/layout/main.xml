<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:background="#1A9FA7"
	android:padding="17dp">

	<TextView
		android:layout_marginTop="50dp"
		android:id="@+id/lbl_mob"
		android:text=" موبایل"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="#FBF7F6"
		android:gravity="center_vertical|center_horizontal"
		android:textSize="21sp"/>

	<TextView
		android:layout_marginTop="50dp"
		android:id="@+id/lbl_code"
		android:text="کد درخواستی "
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="#F9EBEA"
		android:gravity="center|center_vertical"
		android:textSize="22sp"/>

	<Button
		android:onClick="runit"
		android:layout_marginTop="50dp"
		android:id="@+id/btn_ok"
		android:text="تایید واجرای کد"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#E3EFF3"
		android:textColor="#F00A10"
		android:textSize="22sp"
		
		android:padding="20dp"
		android:shadowColor="#000000"
		android:shadowRadius="12.0"
		android:shadowDx="5.0"/>

</LinearLayout>

